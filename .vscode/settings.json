{
  /*
   * ===============================================
   * Built-in settings
   * ===============================================
   */

  /*
   * Disable to fix performance issues
   */
  "settingsSync.keybindingsPerPlatform": false,
  "search.followSymlinks": false,

  /*
   * Theme
   */
  "workbench.colorTheme": "Hong",
  "symbols.hidesExplorerArrows": false,
  "workbench.iconTheme": "symbols",
  "editor.semanticHighlighting.enabled": "configuredByTheme",

  /*
   * Window
   */
  "window.title": "${dirty}${activeEditorShort}${separator}${rootName}",
  "window.restoreWindows": "all",

  /*
   * Startup View
   */
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,

  /*
   * Hide elements
   */
  "explorer.compactFolders": false,
  "editor.lightbulb.enabled": "off",

  /*
   * Minimap
   */
  "editor.minimap.enabled": false,

  /*
   * Scrollbar
   */
  "editor.scrollbar.verticalScrollbarSize": 10,
  "editor.scrollbar.horizontalScrollbarSize": 6,
  "editor.scrollbar.vertical": "auto",
  "editor.scrollbar.horizontal": "auto",

  /*
   * Editor font
   */
  "editor.fontFamily": "Geist Mono",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.8,
  "editor.fontWeight": "normal",

  /*
   * Terminal
   */
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  "terminal.integrated.fontSize": 14,

  /*
   * Bracket pair
   */
  "editor.guides.bracketPairs": "active",
  "editor.bracketPairColorization.enabled": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": false,

  /*
   * Cursor
   */
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",

  /*
   * Miscellaneous
   */
  "editor.accessibilitySupport": "off",

  /*
   * Code
   */
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.organizeImports": "never"
  },
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.inlineSuggest.enabled": true,
  "editor.linkedEditing": true,
  "editor.maxTokenizationLineLength": 6000,
  "editor.multiCursorModifier": "alt",
  "editor.quickSuggestions": {
    "comments": "off",
    "other": true,
    "strings": true
  },
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "emmet.triggerExpansionOnTab": true,
  "files.associations": {
    ".env*": "properties"
  },
  "files.eol": "\n",
  "security.workspace.trust.untrustedFiles": "open",
  "security.promptForLocalFileProtocolHandling": false,
  "workbench.editor.enablePreview": false,

  /*
   * ===============================================
   * Extension settings
   * ===============================================
   */

  /*
   * Apc Customize UI++
   */
  "apc.font.family": "Geist Mono",

  /*
   * Title bar
   */
  "window.commandCenter": false,
  "workbench.layoutControl.enabled": false,
  "window.titleBarStyle": "custom",

  /*
   * Status bar
   */
  "apc.statusBar": {
    "position": "bottom",
    "height": 26,
    "fontSize": 11.5
  },

  /*
   * Alignment
   */
  "apc.header": { "height": 36 },
  "apc.sidebar.titlebar": { "height": 36 },

  /*
   * List style
   */
  "apc.listRow": {
    "lists": [
      "results",
      "scm-view",
      "outline-tree",
      "open-editors",
      "customview-tree",
      "quick-input-list",
      "debug-breakpoints",
      "debug-view-content",
      "explorer-folders-view"
    ],
    "height": 30,
    "fontSize": 12.5
  },

  /*
   * Style sheet
   */
  "apc.stylesheet": {
    ".open-editors .monaco-icon-label:before": "height: 30px !important",
    ".filematch .monaco-icon-label:before": "height: 30px !important",
    ".scm-view .monaco-icon-label:before": "height: 30px !important",
    ".quick-input-list-row .monaco-icon-label:before": "height: 30px !important",
    ".rootfolder-icon.monaco-icon-label:before": "height: 30px !important",
    ".pane-header .title": "letter-spacing: 0.5px",

    // Text transform
    ".monaco-workbench .part.sidebar h2, .monaco-workbench .part.sidebar h3, #workbench\\.parts\\.panel .action-item": {
      "text-transform": "none !important"
    },

    // Sidebar
    ".monaco-workbench .activitybar>.content :not(.monaco-menu)>.monaco-action-bar .active-item-indicator": {
      "display": "flex",
      "justify-content": "center",
      "align-items": "center",
      "z-index": "0 !important"
    },
    ".monaco-workbench .activitybar>.content :not(.monaco-menu)>.monaco-action-bar .active-item-indicator:before": {
      "position": "unset !important",
      "border-left": "0 !important",
      "background-color": "var(--vscode-toolbar-hoverBackground) !important",
      "width": "38px !important",
      "height": "38px !important",
      "border-radius": "8px !important"
    },

    // #workbench.parts.panel (Terminal)
    "#workbench\\.parts\\.panel .action-item.checked:not(:focus)": {
      "background-color": "var(--vscode-toolbar-hoverBackground) !important"
    },
    "#workbench\\.parts\\.panel .action-item.checked .active-item-indicator:before": {
      "bottom": "0 !important"
    },
    "#workbench\\.parts\\.panel .action-item .active-item-indicator": {
      "width": "100% !important",
      "left": "0 !important"
    },
    "#workbench\\.parts\\.panel .global-actions": {
      "height": "35px !important"
    }
  },

  /*
   * Formatter for different languages
   */
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[dockercompose]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[mdx]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.quickSuggestions": {
      "comments": "off",
      "other": "off",
      "strings": "off"
    }
  },
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[snippets]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /*
   * Git and GitHub settings
   */
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "never",
  "github.copilot.chat.welcomeMessage": "never",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": true,
    "scminput": false,
    "properties": false,
    "cpp": false,
    "rust": false,
    "go": false
  },
  "github.copilot.editor.enableAutoCompletions": true,
  "githubPullRequests.fileListLayout": "flat",
  "githubPullRequests.pullBranch": "never",

  /*
   * Languages settings
   */
  "javascript.updateImportsOnFileMove.enabled": "never",
  "typescript.updateImportsOnFileMove.enabled": "never",
  "typescript.locale": "en"
}
